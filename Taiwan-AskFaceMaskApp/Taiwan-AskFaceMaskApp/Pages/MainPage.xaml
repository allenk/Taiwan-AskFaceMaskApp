    <Grid ColumnSpacing="0" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <googlemaps:Map HorizontalOptions="FillAndExpand" InitialCameraUpdate="25.033779, 121.540299, 14.5, 0, 0" IsEnabled="False" VerticalOptions="FillAndExpand" />
        <Label
